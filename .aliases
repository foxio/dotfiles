# -*- sh -*-
# with help from from https://github.com/losingkeys/dotfiles

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias show.='defaults write com.apple.finder AppleShowAllFiles YES;
            killall Finder /System/Library/CoreServices/Finder.app'
alias hide.='defaults write com.apple.finder AppleShowAllFiles NO;
            killall Finder /System/Library/CoreServices/Finder.app'

# finds largest directories in cwd
alias ducks='du -cks * | sort -rn | head'

# make directory or file and open it
mkcd() { mkdir $1 && cd $1 }
tim() { touch $1 && vim $1 }

alias git=hub
alias g=git
alias gs='git status'

alias ls='ls -a'

alias vimrc='vim "$HOME/.vimrc"'
alias zshrc='vim "$HOME/.zshrc"'

alias '?'='which'

alias venv='source .venv/bin/activate'

alias dockup='eval "$(docker-machine env default)" && echo "(default) env attached."'

alias rustup='curl -s https://static.rust-lang.org/rustup.sh | sudo sh'

alias u='sudo softwareupdate --download --install --all &&
         brew update && brew upgrade && brew cask && rustup'
alias clean='sudo brew cleanup && brew cask cleanup && rm -rf ~/.Trash/*'
