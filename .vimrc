execute pathogen#infect()

syntax enable
set background=dark
colorscheme solarized

set tabstop=4
set softtabstop=4
set expandtab

set number
set showmatch

set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>  " ,<space>

set foldenable
set foldlevelstart=10
set foldnestmax=10
nnoremap <space> za  " <space>
set foldmethod=indent

